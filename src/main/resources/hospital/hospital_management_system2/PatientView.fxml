<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="hospital.hospital_management_system2.controller.PatientController">

    <!-- ===== TOP: Search ===== -->
    <top>
        <VBox spacing="8" style="-fx-padding: 10;">
            <Label text="Patient Management"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Search:"/>
                <TextField fx:id="txtSearch" promptText="Last name" prefWidth="180"/>
                <Button text="Search" onAction="#searchPatient"/>
            </HBox>
        </VBox>
    </top>

    <!-- ===== CENTER: TABLE ===== -->
    <center>
        <TableView fx:id="patientTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colFirstName" text="First Name" prefWidth="120"/>
                <TableColumn fx:id="colLastName" text="Last Name" prefWidth="120"/>
                <TableColumn fx:id="colDob" text="DOB" prefWidth="100"/>
                <TableColumn fx:id="colGender" text="Gender" prefWidth="90"/>
                <TableColumn fx:id="colContact" text="Contact" prefWidth="120"/>
                <TableColumn fx:id="colAddress" text="Address" prefWidth="180"/>
            </columns>
        </TableView>
    </center>

    <!-- ===== BOTTOM: PAGINATION + FORM ===== -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">

            <!-- Pagination -->
            <Pagination fx:id="pagination"
                        pageFactory="#createPage"/>

            <!-- Form -->
            <GridPane hgap="8" vgap="8">
                <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtFirstName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Last Name:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtLastName" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="DOB:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpDob" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Gender:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <ComboBox fx:id="cbGender" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="Contact:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtContact" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="txtAddress" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
            </GridPane>

            <!-- Buttons -->
            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Button text="Add" onAction="#addPatient"/>
                <Button text="Update" onAction="#updatePatient"/>
                <Button text="Delete" onAction="#deletePatient"/>
                <Button text="Clear" onAction="#clearFields"/>
            </HBox>

        </VBox>
    </bottom>

</BorderPane>
