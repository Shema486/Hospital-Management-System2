<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mainPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="hospital.hospital_management_system2.MainAppController">

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label fx:id="welcomeText"/>
            <Button text="Hello!" onAction="#onHelloButtonClick"/>
            <Button text="Management of Departments" onAction="#showDepartment"/>
            <Button text="Management of Doctors" onAction="#showDoctor"/>
            <Button text="Management of Patients" onAction="#showPatient"/>
        </VBox>
    </center>

</BorderPane>
